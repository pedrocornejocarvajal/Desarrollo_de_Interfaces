<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CRUD_Personas_Maui.ViewModels"
             x:Class="_09_Ejercicio3_MAUI.Views.MainPage">


    <ContentPage.BindingContext>

        <model:recogerPersona />

    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry x:Name="txtNombre"  Text="{Binding Nombre}"/>
            <Button Text="Editar"></Button>
            
            <Label x:Name="lblNombre"  Text="{Binding Nombre}"/>

            
            <Button Text="Eliminar"></Button>
            <Button Text="Añadir"></Button>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

